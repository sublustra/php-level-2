<body>

Goods:<br>
<ul id="goods">
	
</ul>
<button id="load"> Load more</button>
<script>
	let from = 0;

	function loadMore()
	{
		$.ajax({
			url: '?from=' + from,
			dataType: 'html',
			succes: function (html) {
			$('#goods').append(html);
			from += {{ loadSize }};
			}
		});
	}
	loadMore();
	$('#load').click(function() {
		loadMore();
	});
</script>

